#!/usr/bin/env bash
# Pre-commit hook for Go code quality checks
# This runs before every commit to ensure code quality standards

set -e

echo "üîç Running pre-commit checks..."

# Check if goimports is installed
if ! command -v goimports >/dev/null 2>&1; then
    echo "üì¶ Installing goimports..."
    go install golang.org/x/tools/cmd/goimports@latest
fi

# Check if golangci-lint is installed
if ! command -v golangci-lint >/dev/null 2>&1; then
    echo "üì¶ Installing golangci-lint..."
    curl -sSfL https://raw.githubusercontent.com/golangci/golangci-lint/HEAD/install.sh | sh -s -- -b $(go env GOPATH)/bin v2.6.2
fi

# Get list of staged Go files
STAGED_GO_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.go$' | grep -v 'vendor/' || true)

if [ -z "$STAGED_GO_FILES" ]; then
    echo "‚úÖ No Go files to check"
    exit 0
fi

echo "üìù Checking Go files:"
echo "$STAGED_GO_FILES" | sed 's/^/  - /'

# Check formatting
echo ""
echo "üé® Checking code formatting..."
UNFORMATTED=$(goimports -l -local github.com/bashhack/cdx $STAGED_GO_FILES)
if [ -n "$UNFORMATTED" ]; then
    echo "‚ùå The following files need formatting:"
    echo "$UNFORMATTED" | sed 's/^/  - /'
    echo ""
    echo "Run: make format"
    echo "Then: git add <files>"
    exit 1
fi

# Run go vet on entire codebase
echo "üî¨ Running go vet..."
VET_OUTPUT=$(go vet ./... 2>&1)
if [ $? -ne 0 ]; then
    echo "$VET_OUTPUT" | sed 's/^/  /'
    echo "‚ùå go vet failed"
    echo "Fix the errors above and try again"
    exit 1
fi

# Run golangci-lint on entire codebase
echo "üîç Running golangci-lint..."
LINT_OUTPUT=$(golangci-lint run ./... 2>&1)
if [ $? -ne 0 ]; then
    echo "$LINT_OUTPUT" | sed 's/^/  /'
    echo "‚ùå golangci-lint failed"
    echo "Fix the errors above and try again"
    exit 1
fi

echo ""
echo "‚úÖ All pre-commit checks passed!"
